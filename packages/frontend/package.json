  "scripts": {
    "format": "prettier --cache --write .",
    "predev": "kill-port 3000",
    "dev": "next dev --turbopack",
    "prebuild": "rimraf .next ../../docs",
    "build": "next build",
    "postbuild": "touch ../../docs/.nojekyll",
    "build:android": "rm -rf mobile/android && cap add android && pnpm cap sync android",
    "build:ios": "rm -rf mobile/ios && cap add ios && pnpm cap sync ios",
    "build:mobile": "pnpm build:android && pnpm build:ios",
    "prestart": "kill-port 3000",
    "start": "next start",
    "lint": "eslint ."
  },
  "dependencies": {
    "@capacitor/android": "7.4.4",
    "@capacitor/core": "7.4.4",
